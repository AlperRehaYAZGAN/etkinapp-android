<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BA2D0B"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ticket_detail_btn_previous"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/dr_ic_previous"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_dr_ic_ticket"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Etkin App"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:gravity="center_horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/app_red"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/ticket_detail_img_qrcode"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:background="#DDDDDD"
                            android:layout_margin="20dp"
                            />

                        <ImageView
                            android:id="@+id/ticket_list_item_img_profile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/li_ic_photo_default"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_margin="20dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/app_white"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Etkinlik Ä°smi: "/>


                            <TextView
                                android:id="@+id/ticket_detail_txt_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/app_white"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Bulusma Partisi"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_margin="20dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/app_white"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Bilet Sahibi: "/>


                            <TextView
                                android:id="@+id/ticket_detail_txt_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/app_white"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Bulusma Partisi"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="30dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/app_white"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Etkinlik Tarihi: "/>


                            <TextView
                                android:id="@+id/ticket_detail_txt_evemtstarts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/app_white"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="23/04/2020 18:00:00"/>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>